{
  "name": "bear-react-dropdown",
  "version": "3.0.6-alpha.19",
  "description": "Dropdown list with React Component",
  "keywords": [
    "react",
    "typescript",
    "dropdown"
  ],
  "private": false,
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imagine10255/bear-react-dropdown.git"
  },
  "module": "./dist/bear-react-dropdown.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/bear-react-dropdown.es.js"
    },
    "./dist/index.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "dev": "NODE_ENV=dev vite build -w",
    "build:claer": "rm -rf ./dist",
    "prepublishOnly": "run-s build",
    "build": "run-s build:claer && tsc && vite build",
    "preview": "vite preview",
    "lint:fix": "eslint ./src --fix",
    "cz": "git-cz",
    "test": "jest",
    "gitlog": "git log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cblueby %an %Cgreen(%cr)%Creset'",
    "release": "standard-version --release-as",
    "release:major": "standard-version -r major",
    "release:minor": "standard-version -r minor",
    "release:patch": "standard-version -r patch",
    "release:alpha": "standard-version --prerelease alpha"
  },
  "dependencies": {
    "react": "^18.x",
    "react-dom": "^18.x",
    "react-hotkeys-hook": "^3.x",
    "clsx": "^2.x"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "cz-git": "^1.6.1",
    "eslint": "^8.37.0",
    "eslint-config-react-app": "^7.0.1",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "rollup-plugin-visualizer": "^5.9.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^2.1.0",
    "vite-plugin-eslint": "^1.8.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
